@model CJR_NewBugTracker.Models.ProjectAssignViewModel

@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

    <h3>Assign Users To Project</h3>
    <hr />
    <div>&emsp;</div>
    <d1 class="dl-horizontal">
        <dt>Project Name:</dt>
        <dd>@Html.DisplayFor(model => model.project.Name)</dd>
        <dt>&emsp;</dt>
        <dd>&emsp;</dd>
        <dt>Project Description:</dt>
        <dd>@Html.DisplayFor(model => model.project.Description)</dd>
    </d1>
<hr />
<div>&emsp;</div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.project.Id)
    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-sm-offset-1 col-md-10">
                @Html.ListBox("SelectUsers", Model.Users, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Users, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-1 col-md-10">
                <input type="submit" value="Upadate Project Users" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>&emsp;</div>

    <div>
        @Html.ActionLink("Back to List", "Index")
        <hr />
    </div>
<div>&emsp;</div>
