@model CJR_NewBugTracker.Models.TicketComment

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<h2>Are you sure you want to delete this comment?</h2>
<h3>Ticket Information</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Project Name
        </dt>
        <dd>
            @ViewBag.ticket.Project.Name
        </dd>
        <dt>
            Project Description
        </dt>
        <dd>
            @ViewBag.ticket.Project.Description
        </dd>
        <dt>
            Ticket Title
        </dt>
        <dd>
            @ViewBag.ticket.Title
        </dd>
        <dt>
            Ticket Description
        </dt>
        <dd>
            @ViewBag.ticket.Description
        </dd>
        <dt>
            Ticket Type
        </dt>
        <dd>
            @ViewBag.ticket.TicketType.Name
        </dd>
        <dt>
            Ticket Status
        </dt>
        <dd>
            @ViewBag.ticket.TicketStatus.Name
        </dd>
        <dt>
            Ticket Priority
        </dt>
        <dd>
            @ViewBag.ticket.TicketPriority.Name
        </dd>
        <dt>
            Comment To Delete
        </dt>
        <dd>
            @Model.Comment
        </dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
    </div>

    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
    <input type="hidden" id="TicketId" name="TicketId" value="@ViewBag.ticket.Id" />

}

<div>
    @Html.ActionLink("Back to ticket Details", "Details", "Tickets", new { id = Model.Ticket.Id }, null)
</div>
<div>&emsp;</div>
<hr />
<div>&emsp;</div>
